# Application
APP_NAME=BMA_Social
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://bma_user:bma_pass@localhost:5432/bma_social
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_DECODE_RESPONSES=True

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Soundtrack Your Brand API
SOUNDTRACK_BASE_URL=https://api.soundtrackyourbrand.com/v2
SOUNDTRACK_CLIENT_ID=your-soundtrack-client-id
SOUNDTRACK_CLIENT_SECRET=your-soundtrack-client-secret
SOUNDTRACK_RATE_LIMIT=1000
SOUNDTRACK_MAX_CONNECTIONS=100

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# Line Business API
LINE_API_URL=https://api.line.me/v2
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# Claude API (Anthropic)
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# Polling & Monitoring
POLLING_INTERVAL_SECONDS=300
ALERT_COOLDOWN_SECONDS=3600
MAX_RETRIES=3
BATCH_SIZE=100

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@bma-social.com

# OpenWeatherMap API (Optional)
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False